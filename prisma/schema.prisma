generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id           String   @id
  name         String
  email        String
  date         DateTime
  time         String
  product_id   String?
  session_name String?
  heard_from   String?
  message      String?
  created_at   DateTime @default(now())
  updated_at   DateTime
  Product      Product? @relation(fields: [product_id], references: [id])
}

model Portfolio {
  id         String   @id
  url        String   @unique
  title      String?  @default("Portfolio")
  created_at DateTime @default(now())
  updated_at DateTime
}

model Product {
  id          String    @id
  title       String    @unique
  price       Float
  description String?
  duration    String
  photos      String
  image_url   String
  cta         String?   @default("Book Now")
  created_at  DateTime  @default(now())
  updated_at  DateTime
  Booking     Booking[]
}

model User {
  id         String   @id
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime
}
